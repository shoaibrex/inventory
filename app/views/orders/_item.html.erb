<div class="form-group">
	<div class="row">
		<label>Item</label>
	  <%= text_field_tag "item[]",nil, class: 'item-name', required: true %>
	  <%= hidden_field_tag "item_id[]",nil, class: 'item-id', required: true %>

	  <label>Quantity</label>
	  <%= number_field_tag "quantity[]",nil, class: '', placeholder: 'Enter Quantity', required: true %>
	  <label>Price</label>
	  <%= number_field_tag "price[]",nil, class: '', placeholder: 'price', required: true %>
	  <a href="#" class="rem-row">Remove</a>
	</div>
</div>
<script>
      $(document).ready(function () {
      	$(".rem-row").click(function(){
           this.parentElement.parentElement.remove();
        });
      });
</script>