<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Update Stock
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page</a>
          </li>
          <li class="active">Update Stock</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-header">
              <div class="box-header with-border">
                <h3 class="box-title">Basic Information</h3>
              </div>
              <!-- /.box-header -->
              <!-- form start -->
              <%= form_tag(stock_item_path(id: @item.id), method: :put)  do %>
              
              <div class="box-body">
                <div class="form-group">
                  <label>Name : </label>
                  <%= @item.name  %>
                </div>
                <div class="form-group">
                  <label>Description : </label>
                  <%= @item.description %>
                </div>
                <div class="form-group">
                  <label>Quantity : </label>
                  <%= @item.quantity %>
                </div>
                <div class="form-group">
                  <label>Category : </label>
                  <%= @item.category_name %>
                </div>
                <div class="form-group">
                  <label>Action </label>
                  <%= select_tag :act, options_for_select([["Add","1"], ["Remove","0"]]), class: 'form-control' %>
                </div>
                <div class="form-group">
                  <label>Numbers</label>
                  <%= number_field_tag :number, 0, class: "form-control", placeholder: "Enter Numbers" %>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <%= submit_tag "Save", class: "btn btn-primary"%>
              </div>
              <% end %>
            </div>
            <!-- /.box -->
          </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
      <div class="pull-right hidden-xs">
        <b>Version</b>
        0.1
      </div>
      Content available under
      <a href="http://creativecommons.org/licenses/by-sa/4.0/">Creative Commons Attribution-ShareAlike 4.0</a>.
    </footer>
    <!-- ./wrapper -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
      $.widget.bridge('uibutton', $.ui.button);

      new Awesomplete('.awesomeplete', {
        filter: function(text, input) {
          return Awesomplete.FILTER_CONTAINS(text, input.match(/[^,]*$/)[0]);
        },

        item: function(text, input) {
          return Awesomplete.ITEM(text, input.match(/[^,]*$/)[0]);
        },

        replace: function(text) {
          var before = this.input.value.match(/^.+,\s*|/)[0];
          this.input.value = before + text + ", ";
        }
      });
    </script>
  </body>